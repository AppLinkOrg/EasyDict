Page{
  padding-bottom: 50rpx;
}
.evaluation {
  background-color: #17607d;
  border-radius: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.evaluation_hover {
  background-color: rgb(41, 132, 168);
  border-radius: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.text_box {
  font-size: 30rpx;
  border-radius: 10rpx;
  min-height: 120rpx;
  width: 94%;
  background-color: #e5e5e5;
}

.img {
  opacity: 0.7;
  height: 180rpx;
  width: 340rpx;
}

.mid {
  border-top: 4rpx solid #cfcecf;
  border-bottom: 4rpx solid #cfcecf;
}
.dic {
  
  border-bottom: 1rpx solid #cfcecf;
}
.icon_laba{
  position: absolute;
  right: 80rpx;
}
.under {
  position: fixed;
  z-index: 101;
  width: 100%;
  background: white;
  height: 25%;
  bottom: 0px;
}

.bg {
  background: rgb(8, 8, 8);
  opacity: 0.5;
  position: fixed;
  bottom: 0px;
  z-index: 100;
  width: 100%;
}

.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.topclose {
  position: fixed;
  background: white;
  z-index: 100;
  width: 100%;
}
